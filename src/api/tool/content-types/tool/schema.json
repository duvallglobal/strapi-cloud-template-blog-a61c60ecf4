{
  "kind": "collectionType",
  "collectionName": "tools",
  "info": {
    "singularName": "tool",
    "pluralName": "tools",
    "displayName": "Tool",
    "description": "Free tools and resources"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "tags": {
      "type": "json"
    },
    "accessLevel": {
      "type": "enumeration",
      "enum": ["free", "subscriber", "premium"],
      "default": "free"
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "downloadUrl": {
      "type": "string"
    },
    "externalLink": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published", "archived"],
      "default": "draft"
    },
    "views": {
      "type": "integer",
      "default": 0
    }
  }
}

